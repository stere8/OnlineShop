@page
@model OnlineShop.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3"><strong>Total Users:</strong> @Model.TotalUsers</div>
    <div class="col-md-3"><strong>Total Products:</strong> @Model.TotalProducts</div>
    <div class="col-md-3"><strong>Total Orders:</strong> @Model.TotalOrders</div>
    <div class="col-md-3"><strong>Total Revenue:</strong> @Model.TotalRevenue.ToString("C")</div>
</div>

<h4 class="mt-4">Orders by Status</h4>
<ul>
    @foreach (var entry in Model.OrdersByStatus)
    {
        <li><strong>@entry.Key:</strong> @entry.Value</li>
    }
</ul>
